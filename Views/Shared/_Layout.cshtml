@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Utilisateur> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LocMNSApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/toastr-bower-master/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/LocMNSApp.styles.css" asp-append-version="true" />
</head>
<body class="background-back">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow background-back ">
            <div class="container-fluid ">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/Logo_img.png" alt="Logo" width="50px" height="50px" /></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                        @if (_signInManager.IsSignedIn(User))
                        {
                                @if (User.IsInRole("Admin"))
                                {
                                <li class="nav-item ">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Utilisateur" asp-action="Index">Utilisateur</a>
                                </li>
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Materiel" asp-action="Index">Materiel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Location" asp-action="Index">Location</a>
                                </li>
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Location" asp-action="UserLocations">Mes Locations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Materiel" asp-action="Index">Materiel</a>
                                </li>
                                <li class="nav-item">
                                    <a class="ma-nav-link " asp-area="" asp-controller="Location" asp-action="UserLocations">Mes Locations</a>
                                </li>
                                
                            }
                            
                        }
                        </ul>
                        <partial name="_LoginPartial"></partial>
                    </div>
                </div>
            </nav>
        </header>
    
   
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted " >
            <div class="container text-white" >
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/image/Logo_img.png" alt="Logo" width="50px" height="50px" /></a>
                All Rights Reserved &copy; 2024 - LocMNSApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/toastr-bower-master/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
