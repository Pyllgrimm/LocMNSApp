@model LocMNSApp.Models.Location

@{
    
}
<div class="row">
    <div class="col-md-8 mx-auto mt-5 mb-5 background-Formulaire rounded ps-5 pe-5">
        <h2 class="text-center mb-5 mt-3 text-white background-Formulaire">Edit Matériel</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Id</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext text-white" readonly value="@Model.Id" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Date Demande</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DateDemande" />
                    <span asp-validation-for="DateDemande" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Date Debut</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DateDebut" />
                    <span asp-validation-for="DateDebut" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Duree</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Duree" />
                    <span asp-validation-for="Duree" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Date Retour Prevue</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DateRetourPrevue" />
                    <span asp-validation-for="DateRetourPrevue" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Date Retour Réel</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="DateRetourReelle" />
                    <span asp-validation-for="DateRetourReelle" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Status Demande</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="Status.StatusName">
                        <option value="Other">Other</option>
                        <option value="Informatique">Informatique</option>
                        <option value="Téléphonie">Téléphonie</option>
                        <option value="Accessoire">Accessoire</option>
                    </select>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Montant Total</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="MontantTotal" />
                    <span asp-validation-for="MontantTotal" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Demandeur</label>
                <div class="col-sm-8">
                    <a class="btn btn-primary text-white" asp-controller="Utilisateur" asp-action="Edit" asp-route-id="@ViewData["DemandeurID"]">Voir Détails</a>
                    <span asp-validation-for="Demandeur" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-white">Materiel Demande</label>
                <div class="col-sm-8">
                    <a class="btn btn-primary text-white" asp-controller="Materiel" asp-action="Edit" >Voir Détails</a>
                    <span asp-validation-for="MaterielDemande" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary text-white" asp-controller="Location" asp-action="Index" role="button">Retour</a>
                </div>
            </div>
        </form>
    </div>
</div>

